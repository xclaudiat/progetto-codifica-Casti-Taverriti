    <text type="cartolina" xml:id="cartolina218">
        <body>
            <div type="fronte">
                <figure>
                    <pb facs="#frontesurface2" n="1" xml:id="frontecartolina2"/>
                    <figDesc facs="#zona2.1">Una donna accarezza due cani al suo fianco</figDesc>
                    <head>Donna con cani</head>
					<signed>Monestier</signed>
                </figure>
                <div type="message">
                    <p><lb facs="#zona2.2" /> Sii buona<pc type="comma">,</pc> sempre 
                        <lb facs="#zona2.3" />Un bacio
                    </p>
                    <lb facs="#zona2.4" /><signed rend="underline">tuo <persName ref="#GC">Giovanni</persName></signed>
                </div>
            </div>
            <div type="retro">
                <pb facs="#retrosurface2" n="2" xml:id="retrocartolina2" />
                <div type="message">
                    <opener>
                        <lb facs="#zona2.5" />
                        <dateline>
                            <placeName  ref="#MO"> Modena<pc type="comma">,</pc></placeName>
                            <distinct type="forma_desueta">li</distinct>
                            <date when="1917-10-24">24<pc>/</pc>10<pc>-</pc>17</date>
                        </dateline>
                        <lb  facs="#zona2.6"/>
                        <salute><persName ref="#OT">Oliva</persName> mia<pc type="comma">,</pc></salute>
                    </opener>
                    <div xml:id="body_testo">
                        <p>
                            <lb facs="#zona2.7" />Le tue buone parole<pc type="comma">,</pc> il tuo ricordo affettuoso
                            <lb facs="#zona2.8" /> mi sono tanto d<pc type="apostrophe">'</pc>aiuto<pc type="period">.</pc> È il tuo amore
                            <lb facs="#zona2.9" /> il centro vitale delle mie aspirazioni<pc type="comma">,</pc> la <w>promes<pc force="inter">-</pc>
                            <lb facs="#zona2.10" break="no" rend="double stroke" />sa</w> delle mie gioie<pc type="comma">,</pc> la palestra dei miei <distinct type="forma_desueta">sacrifi<pc force="inter">-</pc>
                            <lb facs="#zona2.11"  break="no" rend="" />zi</distinct> ed io Oliva mia te ne sono riconoscente
                            <lb facs="#zona2.12" /> ricambiando con pari affetto<pc type="comma">,</pc> con ardente
                            <lb facs="#zona2.13" /> amore purissimo<pc type="comma">,</pc> con forza di sentimenti<pc type="comma">,</pc>
                        </p>
                    </div>
                    <closer>
                        <signed facs="#zona2.14"> in eterno tuo <persName ref="#GC" rend="underline">Giovanni</persName></signed>
                    </closer>
                </div>
            </div>
        </body>
    </text>
